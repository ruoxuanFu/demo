<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_blue_pressed</item>
        <item name="colorPrimaryDark">@color/color_blue_pressed</item>
        <item name="colorAccent">@color/color_blue_pressed</item>
    </style>

    <!-- 线条 -->
    <style name="style_base_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="style_base_w">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="black_16" parent="@style/style_base_w">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="blue_14" parent="@style/style_base_w">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <style name="gray_14" parent="@style/style_base_w">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>

</resources>
